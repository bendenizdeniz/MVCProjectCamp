@model EntityLayer.Concrete.Heading

@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Başlık Ekleme</h2>

@using (Html.BeginForm("AddHeading", "Heading", FormMethod.Post))   //function, controller, runtime method
{
    <div class="form-group">
        @Html.Label("Başlık Adı")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.HeadingName)
        <br />
        @Html.Label("Kategori")
        @Html.DropDownListFor(x => x.IDCategory, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
        <br />
        @Html.Label("Yazar")
        @Html.TextBoxFor(x => x.IDWriter, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.IDWriter)
        <br />
        <button class="btn btn-info">Başlık Oluştur</button>
    </div>

}